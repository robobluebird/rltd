  gem 'haml-rails'
  gem 'ruby-debug19', :require => 'ruby-debug'
  gem 'hpricot'
  gem 'ruby_parser'
end

group :test, :development do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'capybara'
  gem 'launchy'
  gem 'database_cleaner'
