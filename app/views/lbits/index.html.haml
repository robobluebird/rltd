.container
  .titlebar
    .maintitle= @hub.label + "'s lbits"
  .underbar
    %span.littletext
      = link_to 'back', hub_path(@hub)
      = " - "
    %span.littletext= link_to 'sign out', destroy_user_session_path, :method => :delete
    .littletext(style='float:right') #{current_user.email}
  .content
    %table
      %tr
        %th Title
        %th Description
        %th Url
        %th Look
        -# %th
        -# %th

      - @lbits.each do |lbit|
        %tr
          %td= lbit.title
          %td= lbit.description
          %td= lbit.url
          %td= link_to 'Show', hub_lbit_path(@hub.id,lbit.id)
  .footerbar
    .footertext
      .littletext
        Copyright &copy; 2011 - Zachary Schroeder
