.container
  .titlebar
    .maintitle= @hub.label + "'s lbits"
  .underbar
    %span.littletext
      = link_to 'back', hub_path(@hub)
      = " - "
    %span.littletext= link_to 'sign out', destroy_user_session_path, :method => :delete
    .littletext(style='float:right') #{current_user.email}
  .content
    -@lbits.each do |lbit|
      .spanner.item
        %a.lbit(href="#{lbit.url}") #{lbit.title}
        =#%a{:href => hub_lbit_path(@hub, lbit)} details
        %span.votetext
          %span#lbit_points #{lbit.votes_point}
          = link_to '▲', vote_hub_lbit_path(@hub,lbit), :class => 'lbitup'
          = link_to '▼', vote_hub_lbit_path(@hub,lbit), :class => 'lbitdown'
  .footerbar
    .footertext
      .littletext
        Copyright &copy; 2011 - Zachary Schroeder
