= form_for @lbit do |f|
  -if @lbit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lbit.errors.count, "error")} prohibited this lbit from being saved:"
      %ul
        - @lbit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
