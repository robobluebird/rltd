= form_for @qbit do |f|
  -if @qbit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@qbit.errors.count, "error")} prohibited this qbit from being saved:"
      %ul
        - @qbit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :quotee
    = f.text_field :quotee
  .field
    = f.label :quote
    = f.text_area :quote
  .actions
    = f.submit 'Save'
