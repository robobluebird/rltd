.container
  .titlebar
    .maintitle= @hub.label + "'s qbits"
  .underbar
    %span.littletext
      = link_to 'back', hub_path(@hub)
      = " - "
    %span.littletext= link_to 'sign out', destroy_user_session_path, :method => :delete
    .littletext(style='float:right') #{current_user.email}
  .content
    %table
      %tr
        %th Quotee
        %th Quote
        %th View
        -# %th
        -# %th

      - @qbits.each do |qbit|
        %tr
          %td= qbit.quotee
          %td= qbit.quote
          %td= link_to 'Show', hub_qbit_path(@hub.id,qbit.id)
          -# %td= link_to 'Edit', edit_qbit_path(@hub.id,qbit.id)
          -# %td= link_to 'Destroy', qbit, :confirm => 'Are you sure?', :method => :delete
  .footerbar
    .footertext
      .littletext
