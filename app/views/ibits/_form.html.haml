= form_for(@ibit, :html => { :multipart => true }) do |f|
  -if @ibit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ibit.errors.count, "error")} prohibited this ibit from being saved:"
      %ul
        - @ibit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
